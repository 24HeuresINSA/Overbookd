{
  "name": "@overbookd/api",
  "version": "2.22.27",
  "description": "API pour le logiciel de gestion du festival des 24 heures de l'INSA",
  "author": "Club des 24 heures de l'INSA (https://www.24heures.org/)",
  "homepage": "https://gitlab.com/24-heures-insa/overbookd-mono",
  "license": "Apache-2.0",
  "private": true,
  "bugs": {
    "url": "https://gitlab.com/24-heures-insa/overbookd-mono/-/issues/new",
    "email": "contact-project+24-heures-insa-overbookd-mono-31598236-issue-@incoming.gitlab.com"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/24-heures-insa/overbookd-mono",
    "directory": "apps/api"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "pnpm prisma:generate && nest build",
    "build:ci": "pnpm run build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prune": "ts-prune --error --ignore 'index.ts|domains|libraries'",
    "start": "nest start --preserveWatchOutput",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch --preserveWatchOutput",
    "start:migrate:prod": "pnpm database:migrate && pnpm run start:prod",
    "start:prod": "node src/main",
    "version:major": "pnpm version major --commit-hooks=false --git-tag-version=false",
    "version:minor": "pnpm version minor --commit-hooks=false --git-tag-version=false",
    "version:patch": "pnpm version patch --commit-hooks=false --git-tag-version=false",
    "test:unit": "pnpm prisma:generate && jest",
    "test:unit:ci": "pnpm prisma:generate && jest --collectCoverage --ci --reporters=default --reporters=jest-junit --watchAll=false",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:e2e:ci": "jest --config ./test/jest-e2e.json --ci --reporters=default --reporters=jest-junit --watchAll=false",
    "test:watch": "jest --watch",
    "prisma:generate": "npx prisma generate",
    "database:init": "pnpm prisma:generate && pnpm database:migrate && pnpm database:seed",
    "database:migrate": "npx prisma migrate deploy",
    "database:seed": "npx prisma db seed"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "2.0.2",
    "@nestjs/common": "10.4.15",
    "@nestjs/core": "10.4.15",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.4.15",
    "@nestjs/swagger": "8.1.0",
    "@nestjs/throttler": "6.3.0",
    "@overbookd/access-manager": "workspace:*",
    "@overbookd/alerts": "workspace:*",
    "@overbookd/assignment": "workspace:*",
    "@overbookd/configuration": "workspace:*",
    "@overbookd/charisma": "workspace:*",
    "@overbookd/contribution": "workspace:*",
    "@overbookd/domain-events": "workspace:*",
    "@overbookd/festival-event": "workspace:*",
    "@overbookd/festival-event-constants": "workspace:*",
    "@overbookd/geo-location": "workspace:*",
    "@overbookd/http": "workspace:*",
    "@overbookd/list": "workspace:*",
    "@overbookd/logistic": "workspace:*",
    "@overbookd/permission": "workspace:*",
    "@overbookd/personal-account": "workspace:*",
    "@overbookd/planning": "workspace:*",
    "@overbookd/registration": "workspace:*",
    "@overbookd/signa": "workspace:*",
    "@overbookd/slugify": "workspace:*",
    "@overbookd/team": "workspace:*",
    "@overbookd/team-constants": "workspace:*",
    "@overbookd/time": "workspace:*",
    "@overbookd/user": "workspace:*",
    "@overbookd/volunteer-availability": "workspace:*",
    "@overbookd/web-page": "workspace:*",
    "@prisma/client": "6.1.0",
    "bcrypt": "5.1.1",
    "body-parser": "1.20.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "ejs": "3.1.10",
    "express-basic-auth": "1.2.1",
    "html-to-pdfmake": "2.5.19",
    "ics": "3.8.1",
    "jsdom": "25.0.1",
    "jsonwebtoken": "9.0.2",
    "multer": "1.4.5-lts.1",
    "nodemailer": "6.9.16",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "pdfmake": "0.2.17",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.1",
    "sanitize-html": "2.14.0"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.9",
    "@nestjs/schematics": "10.2.3",
    "@nestjs/testing": "10.4.15",
    "@types/bcrypt": "5.0.2",
    "@types/express": "5.0.0",
    "@types/html-to-pdfmake": "2.4.4",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "9.0.7",
    "@types/multer": "1.4.12",
    "@types/node": "22.10.2",
    "@types/passport-jwt": "4.0.1",
    "@types/passport-local": "1.0.38",
    "@types/pdfmake": "0.2.10",
    "@types/sanitize-html": "2.13.0",
    "@types/supertest": "6.0.2",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "prisma": "6.1.0",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "cobertura"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": "22.12.0",
    "pnpm": "9.15.2"
  }
}
