{
  "name": "@overbookd/api",
  "version": "2.5.1",
  "description": "API pour le logiciel de gestion du festival des 24 heures de l'INSA",
  "author": "Club des 24 heures de l'INSA (https://www.24heures.org/)",
  "homepage": "https://gitlab.com/24-heures-insa/overbookd-mono",
  "license": "Apache-2.0",
  "private": true,
  "bugs": {
    "url": "https://gitlab.com/24-heures-insa/overbookd-mono/-/issues/new",
    "email": "contact-project+24-heures-insa-overbookd-mono-31598236-issue-@incoming.gitlab.com"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/24-heures-insa/overbookd-mono",
    "directory": "apps/api"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npx prisma generate && nest build",
    "build:ci": "pnpm run build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prune": "ts-prune --error --ignore 'index.ts|domains|libraries'",
    "start": "nest start --preserveWatchOutput",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch --preserveWatchOutput",
    "start:migrate:prod": "npx prisma migrate deploy && pnpm run start:prod",
    "start:prod": "node src/main",
    "version:major": "pnpm version major --commit-hooks=false --git-tag-version=false",
    "version:minor": "pnpm version minor --commit-hooks=false --git-tag-version=false",
    "version:patch": "pnpm version patch --commit-hooks=false --git-tag-version=false",
    "test": "npx prisma generate && jest",
    "test:ci": "npx prisma generate && jest --collectCoverage --ci --reporters=default --reporters=jest-junit --watchAll=false",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "1.9.1",
    "@nestjs/common": "10.2.7",
    "@nestjs/core": "10.2.7",
    "@nestjs/jwt": "10.1.1",
    "@nestjs/passport": "10.0.2",
    "@nestjs/platform-express": "10.2.7",
    "@nestjs/swagger": "7.1.13",
    "@nestjs/throttler": "5.0.0",
    "@overbookd/alerts": "workspace:^",
    "@overbookd/configuration": "workspace:^",
    "@overbookd/contribution": "workspace:^",
    "@overbookd/domain-events": "workspace:^",
    "@overbookd/list": "workspace:^",
    "@overbookd/period": "workspace:^",
    "@overbookd/permission": "workspace:^",
    "@overbookd/personal-account": "workspace:^",
    "@overbookd/registration": "workspace:^",
    "@overbookd/signa": "workspace:^",
    "@overbookd/slugify": "workspace:^",
    "@overbookd/user": "workspace:^",
    "@overbookd/volunteer-availability": "workspace:^",
    "@prisma/client": "5.4.2",
    "bcrypt": "5.1.1",
    "body-parser": "1.20.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "ejs": "3.1.9",
    "express-basic-auth": "1.2.1",
    "html-to-pdfmake": "2.4.25",
    "ics": "3.5.0",
    "jsdom": "22.1.0",
    "jsonwebtoken": "9.0.2",
    "multer": "1.4.5-lts.1",
    "nodemailer": "6.9.5",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "pdfmake": "0.2.7",
    "reflect-metadata": "0.1.13",
    "rimraf": "5.0.5",
    "rxjs": "7.8.1",
    "sanitize-html": "2.11.0"
  },
  "devDependencies": {
    "@nestjs/cli": "10.1.18",
    "@nestjs/schematics": "10.0.2",
    "@nestjs/testing": "10.2.7",
    "@types/bcrypt": "5.0.0",
    "@types/express": "4.17.18",
    "@types/html-to-pdfmake": "2.4.2",
    "@types/jest": "29.5.5",
    "@types/jsonwebtoken": "9.0.3",
    "@types/multer": "1.4.8",
    "@types/node": "20.8.2",
    "@types/passport-jwt": "3.0.10",
    "@types/passport-local": "1.0.36",
    "@types/pdfmake": "0.2.5",
    "@types/sanitize-html": "2.9.1",
    "@types/supertest": "2.0.14",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "prisma": "5.4.2",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.4.4",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "cobertura"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": "20.8.0",
    "pnpm": "8.9.0"
  }
}
