{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true
        }
      }
    ],
    "assets": [
      {
        "include": "**/*.ejs",
        "outDir": "dist/src",
        "watchAssets": true
      },
      {
        "include": "../fonts",
        "outDir": "dist/fonts",
        "watchAssets": true
      },
      {
        "include": "../assets",
        "outDir": "dist/assets",
        "watchAssets": true
      }
    ]
  }
}