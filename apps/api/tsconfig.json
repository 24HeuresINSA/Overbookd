{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@overbookd/configuration": ["../../domains/configuration/src"],
      "@overbookd/contribution": ["../../domains/contribution/src"],
      "@overbookd/list": ["../../libraries/list/src"],
      "@overbookd/period": ["../../libraries/period/src"],
      "@overbookd/permission": ["../../domains/permission/src"],
      "@overbookd/personnal-account": ["../../domains/personnal-account/src"],
      "@overbookd/registration": ["../../domains/registration/src"],
      "@overbookd/signa": ["../../domains/signa/src"],
      "@overbookd/slugify": ["../../libraries/slugify/src"],
      "@overbookd/user": ["../../domains/user/src"],
      "@overbookd/volunteer-availability": [
        "../../domains/volunteer-availability/src"
      ]
    }
  },
  "exclude": ["**/dist", "**/node_modules", "**/build"]
}
