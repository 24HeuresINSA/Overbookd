// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-outside-of-docker-compose
{
  "name": "overbookd dev",
  "initializeCommand": {
    "build-dev-container": "docker build --tag overbookd:dev ./docker",
    "create-traefik-network-if-not-exist": "docker network ls | grep traefik-public || docker network create traefik-public",
    "env-var-none-root-user": "echo \"MY_UID=$(id -u $USER)\nMY_GID=$(id -g $USER)\" >> ./docker/.env"
  },
  "dockerComposeFile": "../docker/docker-compose.yml",
  "service": "bash",
  "workspaceFolder": "/overbookd",
  // Use this environment variable if you need to bind mount your local source code into a new container.
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "nodeGypDependencies": true,
      "version": "20"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vivaxy.vscode-conventional-commits",
        "ms-azuretools.vscode-docker",
        "EditorConfig.EditorConfig",
        "usernamehw.errorlens",
        "mhutchie.git-graph",
        "eamodio.gitlens",
        "Prisma.prisma",
        "dbaeumer.vscode-eslint",
        "kamikillerto.vscode-colorize",
        "Vue.volar",
        "rohit-gohri.format-code-action",
        "DavidAnson.vscode-markdownlint"
      ],
      "settings": {
        "conventionalCommits.autoCommit": false,
        "conventionalCommits.scopes": [
          "ci",
          "web",
          "api",
          "configuration",
          "catalog",
          "gear-request",
          "permission",
          "assignment",
          "planning",
          "secu",
          "user",
          "authentication",
          "personnal-account",
          "fa",
          "release",
          "signa",
          "ft",
          "volunteer-availability",
          "timeline",
          "list",
          "period",
          "trombinoscope",
          "renovate",
          "devcontainer"
        ],
        "cSpell.enabled": false,
        "colorize.languages": ["javascript", "json"],
        "files.watcherExclude": {
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/node_modules/**": true,
          "**/docker/data/**": true
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/docker/data/**": true
        },
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": [
          "source.formatDocument",
          "source.fixAll.eslint"
        ],
        "eslint.validate": ["javascript", "typescript"],
        "eslint.codeActionsOnSave.rules": ["all"],
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[vue]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[scss]": {
          "editor.defaultFormatter": "vscode.css-language-features"
        },
        "[markdown]": {
          "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
        },
        "[python]": {
          "editor.defaultFormatter": "ms-python.python"
        },
        "[dockerfile]": {
          "editor.defaultFormatter": "ms-azuretools.vscode-docker"
        }
      }
    }
  },
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": {
    "pre-commit-installation": "pip install pre-commit && pre-commit install"
  },
  "postStartCommand": {
    "delete-my-uid-in-dot-env": "sed -i '/^MY_UID=[0-9]\\+/d' ./docker/.env",
    "delete-my-gid-in-dot-env": "sed -i '/^MY_GID=[0-9]\\+/d' ./docker/.env"
  }
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
